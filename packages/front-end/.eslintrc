{
  "extends": ["react-app"],
  "plugins": ["react-hooks"],
  "rules": {
    "no-console": "warn",
    "react-hooks/rules-of-hooks": "error",
    "react-hooks/exhaustive-deps": [
      "warn",
      {
        "additionalHooks": "useRecoilCallback"
      }
    ]
  },
  "globals": {
    "shallow": true,
    "render": true,
    "mount": true
  }
}
